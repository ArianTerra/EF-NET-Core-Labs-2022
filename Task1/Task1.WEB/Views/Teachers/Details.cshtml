@model Task1.BL.DTO.TeacherDto
@{
    ViewData["Title"] = "Teachers Details";
}

<h2>@ViewData["Title"]</h2>

@Html.ActionLink("← Back to Teachers", "Index")

<h3>Info</h3>

<p><b>ID</b>: @Model.Id</p>
<p><b>Name</b>: @Model.Name</p>
<p><b>Teaching since</b>: @Model.TeachingSince.ToShortDateString()</p>

<h3>Actions</h3>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>